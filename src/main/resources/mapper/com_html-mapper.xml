<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper SYSTEM "mybatis-3-mapper.dtd">


<mapper namespace="Html">
     
    <!-- 모든 데이터 조회 -->
    <select id="findAll" resultType="html">
        SELECT * FROM com_html
    </select>    
    
    <!-- 기본키 데이터 중복여부 조회 -->
    <select id="countById" parameterType="Long" resultType="html">
        SELECT COUNT(*)
        FROM com_html WHERE HTML=#{HTML}
    </select>
    
    <!-- 신규 데이터 추가 --> 
    <insert id="insert" parameterType="html">
        INSERT INTO com_html(HTML, HTML_NM, createdTime)
            VALUES(#{HTML}, #{HTML_NM}, NOW())
    </insert>   
    
    <!-- 기존 데이터 삭제 --> 
    <delete id="delete" parameterType="html">
        DELETE FROM com_html WHERE HTML=#{HTML}
    </delete>
    
    <!-- 기존 데이터 업데이트(기본키 제외) --> 
    <update id="update" parameterType="html">
        UPDATE com_html SET HTML_NM=#{HTML_NM}, updatedTime=NOW() WHERE HTML=#{HTML}
    </update>
        
</mapper>